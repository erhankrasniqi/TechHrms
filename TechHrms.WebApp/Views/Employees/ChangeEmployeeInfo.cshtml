@model TechHrms.WebApp.Models.Employees.ChangeEmployeeInfoFormModel
@{
    ViewData["Title"] = "Change Employee Info";
}
<h1>@ViewData["Title"]</h1>

<form method="post" action="/Employees/ChangeEmployeeInfo">
    <label for="FirstName">First Name</label>
    <input asp-for="FirstName" placeholder="First Name" />
    <br />
    <br />

    <label for="LastName">Last Name</label>
    <input asp-for="LastName" placeholder="Last Name" />
    <br />
    <br />

    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <button type="submit">Submit</button>
</form>
